<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>CategoryApi</servlet-name>
        <servlet-class>api.CategoryApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryApi</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>StatisticController</servlet-name>
        <servlet-class>controller.StatisticController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StatisticController</servlet-name>
        <url-pattern>/statistic-ok</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
